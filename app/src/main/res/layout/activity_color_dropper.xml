<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vinnie.pixelpicker.ColorDropperActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Layout"
        android:id="@+id/startLayout"
        android:onClick="handleStartLayoutClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doodle"
        android:id="@+id/startDoodle"
        android:onClick="handleStartDoodleClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/previewBox"
        android:layout_alignRight="@+id/startDoodle"
        android:layout_alignEnd="@+id/startDoodle"
        android:layout_above="@+id/startLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Color"
        android:onClick="handleSaveColorClick"
        android:id="@+id/saveToColorBank"
        android:layout_alignBottom="@+id/startLayout"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity= "left|top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textView"
        android:layout_alignTop="@+id/previewBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/startLayout"
        android:layout_alignRight="@+id/saveToColorBank"
        android:layout_alignEnd="@+id/saveToColorBank" />

</RelativeLayout>

